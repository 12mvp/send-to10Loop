{
  "manifest_version": 2,

  "name": "Gifsound to 10Loop",
  "description": "Create 10Loop loop from gifsound",
  "version": "1.0.0",

   "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "https://gifsound.com/",
    "http://gifsound.com/",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

   "content_scripts": [
    {
      "matches": ["http://gifsound.com/*", "https://gifsound.com/*"],
      "js": ["contentscript.js"]
    }
  ],

  "page_action": {
    "default_title": "Gifsound to 10Loop",
    "default_icon": "icons/icon19.png"
  }
}